<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pomtask"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.loki.pomtask.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.loki.pomtask.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loki.pomtask.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.loki.pomtask.NewEditTaskActivity" >
        </activity>
        <activity android:name="com.loki.pomtask.Setting" >
        </activity>
        <activity android:name="com.loki.pomtask.Search" >
        </activity>

        <!-- setting -->
        <activity android:name="com.loki.pomtask.Stat" >
        </activity>
        <activity android:name="com.loki.pomtask.SetTime" >
        </activity>
        <activity android:name="com.loki.pomtask.About" >
        </activity>
    </application>

</manifest>